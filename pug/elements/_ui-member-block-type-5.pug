mixin member-block-type-5(img, icons, contactInfo, btn)
  // Member block type 5
  .member-block-type-5.inset-lg-right-20
    img.img-fluid.d-block.mx-auto(src=img.src, width=img.width, height=img.height, alt="")
    .member-block-body
      a.btn.btn-block(class= btn.class href= btn.link)= btn.text
      .offset-top-34
        ul.list-inline.list-inline-xs
          each icon in icons
            li.list-inline-item
              a.icon.novi-icon.icon-xxs.icon-circle.icon-darker-filled(class= icon.class href=icon.link)
      address.contact-info.offset-top-20.offset-md-top-34
        ul.list-unstyled.p
          each contact in contactInfo
            li
              span.icon.novi-icon.icon-xxs.text-middle.text-dark(class= contact.class)
              a.text-middle.d-inline-block(class= contact.type === "mail" ? "text-picton-blue" : "", href= contact.type === "mail" ? "mailto:"+ contact.link : "tel:"+ contact.link)= contact.link
