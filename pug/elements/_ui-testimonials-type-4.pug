//- Testimonials Type 4

mixin testimonials-type-4(image, title, cite, q)
  //- OutBoxed Testimonials
  blockquote.quote.quote-classic.quote-outboxed
    .quote-body
      p
        q= q
    .quote-meta.unit.flex-row.unit-spacing-sm.align-items-center
      .unit-left.unit-item-narrow
        img.rounded-circle.quote-img(width= image.width, height= image.height, src= image.src, alt= image.alt)
      .unit-body.unit-item-wide
        h6.quote-author.text-uppercase
          cite.text-normal= title
        p.quote-desc.text-uppercase.text-picton-blue= cite
