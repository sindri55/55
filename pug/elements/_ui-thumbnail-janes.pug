mixin thumbnail-janes( options )
  -
    var lightgallery = ( typeof( options.target.href ) !== 'undefined' )
      ? { "href": options.target.href }
      : { "data-lightgallery": "item", "href": options.target.src };

  // Thumbnail Janes
  figure.thumbnail-janes
    div
      a&attributes( lightgallery )
        img( width=options.thumb.width, height=options.thumb.height, src=options.thumb.src, alt=options.thumb.alt )
    figcaption
      div
        h4.thumbnail-janes-title= options.title
      p= options.description
      a.btn(href= options.btnLink class= options.btnClass).offset-xl-top-20= options.btnText
