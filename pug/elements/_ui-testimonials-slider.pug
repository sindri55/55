//- Testimonials Slider

mixin testimonials-slider(testimonials)
  // Testimonials Slider
  .owl-carousel.owl-carousel-default.veil-lg-owl-dots.veil-owl-nav.reveal-lg-owl-nav.inset-left-7p.inset-right-7p(data-items="1" data-nav="true" data-dots="true" data-nav-class='["owl-prev mdi mdi-chevron-left", "owl-next mdi mdi-chevron-right"]')
    each testimonial in testimonials
      div
        blockquote.quote
          img.quote-img.rounded-circle.img-bordered-white(width=testimonial.image.width, height=testimonial.image.height, src=testimonial.image.src, alt=testimonial.image.alt)
          p.quote-body.offset-top-34= testimonial.q
          .offset-top-41
            h3.font-accent= testimonial.title
          p.text-uppercase.font-weight-bold.text-spacing-120.offset-top-10
            span.small.text-malibu= testimonial.desc
