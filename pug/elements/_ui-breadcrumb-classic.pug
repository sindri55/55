//- title - page title
//- icon - page icon
//- breacrumbs - an array of {link} object
mixin breadcrumb-classic(title, icon, breadcrumbs, svgId)
  // Classic Breadcrumbs
  section.section.novi-background.breadcrumb-classic
    .container.section-34.section-sm-50
      .row.align-items-xl-center
        .col-xl-5.d-none.d-xl-block.text-xl-left
          h2
            span.big= title
        .col-xl-2.d-none.d-md-block
            span.icon.icon-white(class=icon)
        .offset-top-0.offset-md-top-10.col-xl-5.offset-xl-top-0.small.text-xl-right
          ul.list-inline.list-inline-dashed.p
            each link, index in breadcrumbs
              if breadcrumbs[parseInt(index) + 1]
                li.list-inline-item
                  a(href=link.href)= link.title
              else
                li.list-inline-item
                  = link.title

    +triangle-gradient('rgb(110,192,161)', 'rgb(111,193,156)', "0,0 60,0 29,29" ,svgId != null? svgId : "grad1")
