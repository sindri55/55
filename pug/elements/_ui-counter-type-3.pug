//- title - counter title
//- icon - icon class
//- counter - {counter} Object
mixin counter-type-3(title, icon, counter)
  // Counter type 3
  .counter-type-3
    .unit.flex-row.unit-spacing-xs
      .unit-left
        span.icon.novi-icon(class= icon)
      .unit-body.text-left
        div
          if( counter.preffix )
            span.h1.font-weight-bold.counter(data-speed=counter.dataSpeed data-from="0" data-to= counter.dataTo)
            span.h1.font-weight-bold= counter.preffix
          else
            .h1.font-weight-bold.counter(data-speed=counter.dataSpeed data-from="0" data-to= counter.dataTo)
        div
          h6.text-uppercase.font-weight-bold.text-dark= title




