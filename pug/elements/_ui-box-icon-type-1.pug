//- icon - icon class
//- title - box title
//- iconDesc - small heading after icon
//- desc - description of box
mixin box-icon-type-1(icon, title, iconDesc, desc)
  // Icon Box Type 1
  span.icon.novi-icon(class= icon)
  if iconDesc != null
    .font-italic.text-gray-dark.small= iconDesc
  div.offset-top-10
    h4.text-uppercase.font-weight-bold= title
    p= desc

