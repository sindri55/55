//- Post Timeline
//- url - expanded post link
//- year - publish year
//- date - publish date
//- title - post title
//- author - authors name
//- tags - array of {link}
//- media - {media} object

include ../elements/_ui-thumbnail-classic
include ../elements/_ui-carousel-gallery-classic
include ../elements/_ui-video-embed
include ../elements/_ui-soundcloud-player-classic

mixin post-timeline(url, year, date, title, author, tags, media)
  // Post Timeline
  article.post.post-timeline
    .row
      .col-md-3
        time(datetime="2019-01-01").unit.unit-spacing-lg.align-items-end.flex-row.unit-sm.flex-md-row.flex-md-row-reverse.justify-content-md-center.offset-md-top-4
          if (year == null)
            span.inset-md-left-93
              span.unit-left
                span.h6.text-mantis
                  span.text-regular.big.text-nowrap= date
          else
            span.unit-left
              span.h6.text-mantis
                span.text-regular.big= date
            span.unit-body.d-none.d-md-flex
              span.h5
                span.font-weight-bold= year

      .col-md-9.offset-top-14.offset-md-top-0
        // Post media
        if media
          header.post-media
            case media.type
              when "gallery"
                +carousel-gallery-classic(media.images)
              when "soundcloud"
                +soundcloud-player-classic(media)
              when "video"
                +video-embed(media)
              when "thumbnail"
                div(data-lightgallery='group')
                  +thumbnail-classic(media)
              default
                = ""

        // Post content
        section.post-content.text-left(class= media? "offset-top-30": "")
          // Post Title
          .post-title
            h3
              a(href=url)= title

          .post-meta.text-dark.small
            p
              if tags
                | In&nbsp;
                each tag, i in tags
                  a(href= tag.href)= tag.title
                  if (i !== (tags.length - 1))
                    = ", "
              if (author == null)
              else
                | &nbsp;by #{author}

          // Post Body
          .post-body.offset-top-20
            block
