//- Testimonials Slider
include ../elements/_ui-quote-simple

mixin testimonials-slider-5(testimonials, carousel)
  .owl-carousel.owl-carousel-default.owl-carousel-class-light.owl-carousel-arrows.veil-lg-owl-dots.veil-owl-nav.reveal-lg-owl-nav.inset-left-7p.inset-right-7p(data-items="1" data-nav="true" data-dots="true" data-nav-class='["owl-prev mdi mdi-chevron-left", "owl-next mdi mdi-chevron-right"]')
    each testimonial in testimonials
      div
        .row.justify-content-sm-center
          .col-xl-8
            .d-inline-block
              div(class= testimonial.unitStyling)
                .unit-left
                  img.rounded-circle(width=testimonial.image.width, height=testimonial.image.height, src=testimonial.image.src, alt=testimonial.image.alt)
                .unit-body
                  div
                    div(class= testimonial.title.titleStyling)= testimonial.title.titleDesc
                  div
                    div(class= testimonial.description.descStyling)= testimonial.description.desc

            .offset-top-41
              +quote-simple(
              {
                "title": testimonial.quote.title,
                "styling": testimonial.quote.styling,
                "firstDivider": testimonial.quote.firstDivider,
                "lastDivider": testimonial.quote.lastDivider
              })
