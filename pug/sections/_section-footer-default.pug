              li: a(href=cfg.nav.pages.submenu.services.href)= cfg.nav.pages.submenu.services.title
              li: a(href=cfg.nav.pages.submenu.pricing.href)= cfg.nav.pages.submenu.pricing.title
              li: a(href=cfg.nav.pages.submenu.clients.href)= cfg.nav.pages.submenu.clients.title

      .col-sm-7.text-sm-left.col-lg-4.col-xl-3
        h6.text-uppercase.text-spacing-60 Latest news

        +widget-post( cfg.nav.blog.submenu.classic.submenu.singlePost.href, "05/14/2018", "Letâ€™s Change the world", null, "text-picton-blue" )
        +widget-post( cfg.nav.blog.submenu.classic.submenu.singlePost.href, "05/14/2018", "The meaning of Web Design", null, "text-picton-blue" )
        +widget-post( cfg.nav.blog.submenu.classic.submenu.singlePost.href, "05/14/2018", "Get Started with TemplateMonster", null, "text-picton-blue" )

