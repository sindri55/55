//Section Get In Touch
section.section.novi-background.section-98.section-sm-110
  .container
    h2.font-weight-bold Get In Touch
    hr.divider.bg-mantis
    .offset-md-top-66
      .row.justify-content-sm-center
        .col-sm-10.col-lg-8
          // RD Mailform
          form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
            .row.justify-content-sm-center
              .col-md-6
                .form-group
                  label.form-label(for="git-3-mailform-first-name") First name
                  input#git-3-mailform-first-name.form-control.bg-default(type="text" name="firstname" data-constraints="@Required")
              .col-md-6
                .form-group
                  label.form-label(for="git-3-mailform-last-name") Last name
                  input#git-3-mailform-last-name.form-control.bg-default(type="text" name="lastname" data-constraints="@Required")
              .col-md-6
                .form-group.offset-md-top-30
                  label.form-label(for="git-3-mailform-phone") Phone
                  input#git-3-mailform-phone.form-control.bg-default(type="text" name="phone" data-constraints="@Required")
              .col-md-6
                .form-group.offset-md-top-30
                  label.form-label(for="git-3-mailform-email") E-mail
                  input#git-3-mailform-email.form-control.bg-default(type="text" name="email" data-constraints="@Required @Email")
              .col-md-12
                .form-group.offset-md-top-30
                  label.form-label(for="git-3-mailform-message") Message
                  textarea#git-3-mailform-message.form-control.bg-default(name="message" data-constraints="@Required")
            .offset-top-24.text-center
              button(type="submit").btn.btn-primary send message

