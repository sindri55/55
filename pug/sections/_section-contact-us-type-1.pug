//- Includes
include ../elements/_widget-list-social
include ../elements/_ui-google-map

// Contact Us
section.section.novi-background.section-50.section-lg-98.section-lg-top-110
  .container-fluid
    h1 Contact Us
    hr.divider.bg-mantis

    .row.justify-content-sm-center.text-md-left
      .col-sm-10.col-md-8.col-lg-8.col-xxl-6.text-left
        p You can contact me any way that is convenient for you. I am available 24/7 via fax, email or telephone. You can also use a quick contact form located on this page to ask a question about my services and projects I work on. I would be happy to answer your questions or offer any help.
    .row.justify-content-sm-center.text-md-left.offset-top-50
      .col-sm-10.col-md-8.col-lg-8.col-xl-5.col-xxl-4
        // RD Mailform
        form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
          .row
            .col-xl-6
              .form-group
                label.form-label(for="contact-me-name") Name
                input#contact-me-name.form-control(type="text" name="name" data-constraints="@Required")
            .col-xl-6.offset-top-20.offset-xl-top-0
              .form-group
                label.form-label(for="contact-me-phone") Phone
                input#contact-me-phone.form-control(type="text" name="phone" data-constraints="@Required")
            .col-xl-12.offset-top-20.offset-xl-top-30
              .form-group
                label.form-label(for="contact-me-email") E-Mail
                input#contact-me-email.form-control(type="email" name="email" data-constraints="@Required @Email")
            .col-xl-12.offset-top-20.offset-xl-top-30
              .form-group
                label.form-label(for="contact-me-message") Message
                textarea#contact-me-message.form-control(name="message" data-constraints="@Required" style="height: 150px")
          .row.justify-content-sm-center.justify-content-xl-start.text-center.text-xl-left.offset-top-30
            .col-sm-8.col-md-6
              button(type="submit").btn.btn-lg.btn-block.btn-primary send message

      .col-sm-10.col-md-8.col-lg-8.col-xl-3.col-xxl-2.offset-top-50.offset-xl-top-0
        .inset-xxl-right-20.text-center.text-xl-left
          address.contact-info.d-md-inline-block.text-left
            .unit.unit-spacing-sm.flex-row.p
              .unit-left
                span.icon.icon-xxs.novi-icon.fa.fa-map-marker
              .unit-body
                a(href="#") 8901 Marmora Road, Glasgow, D04 89GR
            .p.unit.unit-spacing-xs.flex-row.offset-top-20
              .unit-left
                span.icon.icon-xxs.novi-icon.fa.fa-phone
              .unit-body
                a(href="tel:#") 1-800-1234-567
            .p.unit.unit-spacing-xs.flex-row.offset-top-10
              .unit-left
                span.icon.icon-xxs.novi-icon.fa.fa-envelope
              .unit-body
                a(href="mailto:#") jessica@demolink.org
        .text-center.text-xl-left.offset-top-30
          +widget-list-social([
            {
              "icon": "fa fa-facebook",
              "href": "#"
            },
            {
              "icon": "fa fa-twitter",
              "href": "#"
            },
            {
              "icon": "fa fa-google-plus",
              "href": "#"
            },
            {
              "icon": "fa fa-500px",
              "href": "#"
            },
            {
              "icon": "fa fa-behance",
              "href": "#"
            }
          ])

