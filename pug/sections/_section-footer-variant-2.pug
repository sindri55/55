include ../elements/_widget-post
include ../elements/_widget-form-subscribe
include ../elements/_widget-form-contact
include ../elements/_widget-list-social
include ../elements/_ui-quote-simple-slider

// Default footer
footer.section.novi-background.section-relative.section-top-66.section-bottom-34.page-footer.bg-black.context-dark
  .container
    .row.justify-content-center.justify-content-xl-between.text-xl-left.grid-group-md
      .col-sm-12.col-xl-3
        // Footer brand
        .footer-brand
          a(href=cfg.nav.home.href)
            !=cfg.brand.logoInverse
        p.text-darker.offset-top-4 Feel the power of future

        address.contact-info.offset-top-30.p
          div
            dl
              dt.text-white Address:
              dd.text-dark.d-xl-block 28 Jackson Blvd Ste #[span.d-xl-block 1020 Chicago] #[span.d-xl-block IL 60604-2340.]

          div
            dl.offset-top-0
              dt.text-white Telephone:
              dd.text-dark
                a(href='#') +1 800 559 6580
          div
            dl.offset-top-0
              dt.text-white E-mail:
              dd.text-dark
                a(href='mailto:mail@demolink.org') mail@demolink.org

        .offset-top-34.text-sm-center.text-xl-left
          +widget-list-social([
            {
              "icon": "fa fa-facebook",
              "href": "#"
            },
            {
              "icon": "fa fa-twitter",
              "href": "#"
            },
            {
              "icon": "fa fa-google-plus",
              "href": "#"
            },
            {
              "icon": "fa fa-linkedin",
              "href": "#"
            }
          ])

      .col-sm-10.col-md-6.col-xl-4.text-sm-left
        h6.text-uppercase.text-spacing-60.text-center.text-lg-left What people say
        +quote-simple-slider(
        [{
          "title": "Alex Merphy",
          "q": "I am glad I’ve purchased a template from TemplateMonster. Extraordinary customer service, always available, perfect care and knowledge of the technicians. Essential if you are not an expert programmer. In any case highly recommended. Congratulations!"
        },
          {
            "title": "July Mao",
            "q": "I am glad I’ve purchased a template from TemplateMonster. Extraordinary customer service, always available, perfect care and knowledge of the technicians. Essential if you are not an expert programmer. In any case highly recommended. Congratulations!"
          }
        ], "text-white"
        )

      .col-sm-10.col-md-6.col-lg-6.col-xl-4.text-sm-left
        h6.text-uppercase.text-spacing-60.text-center.text-lg-left Contact us

        +widget-form-contact()

  .container.offset-top-50
    p.small.text-darker
      | #{cfg.brand.name} &copy; #[span.copyright-year] . #[a(href="privacy.html") Privacy Policy]
