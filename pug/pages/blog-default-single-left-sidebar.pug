extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumb-classic

//-Title
block title
  title= cfg.nav.blog.submenu.default.title

//- Page
block page
  // Page Header
  header.page-head
    //- RD Navbar
    +rd-navbar-default(
    'rd-navbar-default rd-navbar-light',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.blog,
    cfg.nav
    )

  +breadcrumb-classic(
  cfg.nav.blog.submenu.default.title,
  cfg.nav.blog.submenu.default.icon,
  {
    0: {
      "title": cfg.nav.home.title,
      "href": cfg.nav.home.href
    },
    1: {
      "title": cfg.nav.blog.title,
      "href": cfg.nav.blog.href
    },
    2: {
      "title": cfg.nav.blog.submenu.default.title,
      "href": cfg.nav.blog.submenu.default.href
    },
    3: {
      "title": cfg.nav.blog.submenu.default.submenu.singlePost.title,
      "href": cfg.nav.blog.submenu.default.submenu.singlePost.href
    },
    4: {
      "title": cfg.nav.blog.submenu.default.submenu.singlePost.submenu.leftSidebar.title,
      "href": cfg.nav.blog.submenu.default.submenu.singlePost.submenu.leftSidebar.href
    }
  })

  section.section.novi-background.section-98.section-sm-110
    .container
      .row.justify-content-sm-center
        .col-lg-4
          include ../sections/_section-blog-sidebar-variant-1
        .col-lg-8.offset-top-66.offset-lg-top-0
          .inset-lg-left-20
            include ../sections/_section-blog-default-single

  // Page Footers
  include ../sections/_section-footer-default
