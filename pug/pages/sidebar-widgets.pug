extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumb-classic
include ../elements/_widget-form-search
include ../elements/_widget-flickrfeed
include ../elements/_widget-twitter

//-Title
block title
  title= cfg.nav.components.submenu.toolkitComponents.submenu.sidebarWidgets.title

//- Page
block page
  // Page Header
  header.page-head
    //- RD Navbar
    +rd-navbar-default(
    'rd-navbar-default rd-navbar-light',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.components,
    cfg.nav
    )

  +breadcrumb-classic(
  cfg.nav.components.submenu.toolkitComponents.submenu.sidebarWidgets.title,
  cfg.nav.components.submenu.toolkitComponents.submenu.sidebarWidgets.icon,
  {
    0: {
      "title": cfg.nav.home.title,
      "href": cfg.nav.home.href
    },
    1: {
      "title": cfg.nav.components.title,
      "href": cfg.nav.components.href
    },
    2: {
      "title": cfg.nav.components.submenu.toolkitComponents.submenu.sidebarWidgets.title,
      "href": cfg.nav.components.submenu.toolkitComponents.submenu.sidebarWidgets.href
    }
  })

  // Sidebar Search
  section.section.novi-background.section-66.section-md-top-124
    .container
      h2 Sidebar Search Form Widget
      hr.divider.divider-md.bg-mantis

      .row.justify-content-md-center.offset-top-66
        .col-md-4.col-xl-3
          +widget-form-search("input-sm", "form-label-sm", "blog-sidebar-1-form-search-widget")

  // Flickr Photostream
  section.section.novi-background.section-66
    .container
      h2 Flickr Photo Stream Widget
      hr.divider.divider-md.bg-mantis

      .row.justify-content-md-center.offset-top-66
        .col-md-4.col-xl-3
            +widget-flickrfeed("tm58888_landscapes", {"data-image_q": "src"}, 9)

  // Twitter feed
  section.section.novi-background.section-66.section-md-bottom-124
    .container
      h2 Twitter feed Widget
      hr.divider.divider-md.bg-mantis

      .row.justify-content-md-center.text-left.offset-top-66
        .col-md-4.col-xl-3
          +widget-twitter({"dataTwitterUsername": "templatemonster"})

  // Page Footers
  include ../sections/_section-footer-default
