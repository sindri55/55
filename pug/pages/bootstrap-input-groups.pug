extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumb-classic

//-Title
block title
  title= cfg.nav.components.submenu.bootstrapcomponents.submenu.inputGroups.title

//- Page
block page
  // Page Header
  header.page-head
    //- RD Navbar
    +rd-navbar-default(
      'rd-navbar-default rd-navbar-light',
      {
        "data-lg-auto-height": "true",
        "data-md-layout": 'rd-navbar-fixed',
        "data-lg-layout": 'rd-navbar-static',
        "data-lg-stick-up": 'true'
      },
      cfg.brand.logo,
      cfg.nav.components,
      cfg.nav
      )

  +breadcrumb-classic(
    cfg.nav.components.submenu.bootstrapcomponents.submenu.inputGroups.title,
    "icon-lg " + cfg.nav.components.submenu.bootstrapcomponents.submenu.inputGroups.icon,
    {
      0: {
        "title": cfg.nav.home.title,
        "href": cfg.nav.home.href
      },
      1: {
        "title": cfg.nav.components.title,
        "href": cfg.nav.components.href
      },
      2: {
        "title": cfg.nav.components.submenu.bootstrapcomponents.submenu.inputGroups.title,
        "href": cfg.nav.components.submenu.bootstrapcomponents.submenu.inputGroups.href
      }
    })

  section.section.novi-background.section-98.section-sm-124
    .container
      h1 Button dropdowns
      p.inset-left-7p.inset-right-7p  Extend form controls by adding text or buttons before, after, or on both sides of any text-based #[code &lt;input&gt;]. Use #[code .input-group] with an #[code .input-group-prepend] or #[code .input-group-append] to prepend or append elements to a single #[code .form-control].
      hr.divider.bg-mantis

      // Basic example
      h3.offset-top-66 Basic example
      p.inset-left-7p.inset-right-7p Place one add-on or button on either side of an input. You may also place one on both sides of an input.

      .row.justify-content-md-center.offset-top-41
        .col-md-6
          .form-group
            .input-group
              .input-group-prepend
                span#basic-addon1.input-group-text @
              input.form-control(type='text', placeholder='Username', aria-describedby='basic-addon1')

          .form-group.offset-top-20
            .input-group
              input.form-control(type='text', placeholder="Recipient's username", aria-describedby='basic-addon2')
              .input-group-append
                span#basic-addon2.input-group-text @example.com

          .form-group.offset-top-20
            .input-group
              .input-group-prepend
                span.input-group-text $
              input.form-control(type='text', aria-label='Amount (to the nearest dollar)')
              .input-group-append
                span.input-group-text .00

          .form-group.text-left.offset-top-20
            label(for='basic-url') Your vanity URL
            .input-group
              .input-group-prepend
                span#basic-addon3.input-group-text https://example.com/users/
              input#basic-url.form-control(type='text', aria-describedby='basic-addon3')

      // Sizing example
      h3.offset-top-66 Sizing
      p.inset-left-7p.inset-right-7p Add the relative form sizing classes to the #[code .input-group] itself and contents within will automatically resizeâ€”no need for repeating the form control size classes on each element.

      .row.justify-content-md-center.offset-top-41
        .col-md-6
          .form-group
            .input-group
              .input-group-prepend
                span#basic-addon4.input-group-text @
              input.form-control(type='text', placeholder='Username', aria-describedby='basic-addon4')

          .form-group.offset-top-20
            .input-group.input-group-sm
              .input-group-prepend
                span#basic-addon5.input-group-text @
              input.form-control(type='text', placeholder='Username', aria-describedby='basic-addon5')

      // Button addons
      h3.offset-top-66 Button addons
      p.inset-left-7p.inset-right-7p Buttons in input groups are a bit different and require one extra level of nesting.

      .row.justify-content-md-center.offset-top-41
        .col-md-6
          .form-group
            .input-group.input-group-sm
              input.form-control(type='text', placeholder='Search for...')
              .input-group-append
                button.btn.btn-sm.btn-primary(type='button') Go!

      // Button addons
      h3.offset-top-66 Multiple buttons
      p.inset-left-7p.inset-right-7p While you can only have one add-on per side, you can have multiple buttons inside a single #[code .input-group-append]

      .row.justify-content-md-center.offset-top-41
        .col-md-6
          .form-group
            .input-group.input-group-sm
              span.input-group-prepend
                  button.btn.btn-sm.btn-outline-dark(type='button')
                    span.novi-icon.fa.fa-bold
                  button.btn.btn-sm.btn-outline-dark(type='button')
                    span.novi-icon.fa.fa-italic
              input.form-control(type='text')

  // Page Footer
  include ../sections/_section-footer-default
