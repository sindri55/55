extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumb-classic
include ../elements/_ui-product-grid
include ../elements/_ui-product-grid-type-2

//-Title
block title
  title= cfg.nav.components.submenu.toolkitComponents.submenu.productGrids.title

//- Page
block page
  // Page Header
  header.page-head
    //- RD Navbar
    +rd-navbar-default(
    'rd-navbar-default rd-navbar-light',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.components,
    cfg.nav
    )

  +breadcrumb-classic(
  cfg.nav.components.submenu.toolkitComponents.submenu.productGrids.title,
  cfg.nav.components.submenu.toolkitComponents.submenu.productGrids.icon,
  {
    0: {
      "title": cfg.nav.home.title,
      "href": cfg.nav.home.href
    },
    1: {
      "title": cfg.nav.components.title,
      "href": cfg.nav.components.href
    },
    2: {
      "title": cfg.nav.components.submenu.toolkitComponents.submenu.productGrids.title,
      "href": cfg.nav.components.submenu.toolkitComponents.submenu.productGrids.href
    }
  })

  // Product Grids Type 1
  section.section.novi-background.section-66.section-sm-top-110
