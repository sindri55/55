extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumb-classic
include ../elements/_widget-form-subscribe
include ../elements/_widget-flickrfeed
include ../elements/_widget-twitter


//-Title
block title
  title= cfg.nav.components.submenu.toolkitComponents.submenu.footerWidgets.title

//- Page
block page
  // Page Header
  header.page-head
    //- RD Navbar
    +rd-navbar-default(
      'rd-navbar-default rd-navbar-light',
      {
        "data-lg-auto-height": "true",
        "data-md-layout": 'rd-navbar-fixed',
        "data-lg-layout": 'rd-navbar-static',
        "data-lg-stick-up": 'true'
      },
      cfg.brand.logo,
      cfg.nav.components,
      cfg.nav
    )

  +breadcrumb-classic(
    cfg.nav.components.submenu.toolkitComponents.submenu.footerWidgets.title,
    cfg.nav.components.submenu.toolkitComponents.submenu.footerWidgets.icon,
    {
      0: {
        "title": cfg.nav.home.title,
        "href": cfg.nav.home.href
      },
      1: {
        "title": cfg.nav.components.title,
        "href": cfg.nav.components.href
      },
      2: {
        "title": cfg.nav.components.submenu.toolkitComponents.submenu.footerWidgets.title,
        "href": cfg.nav.components.submenu.toolkitComponents.submenu.footerWidgets.href
      }
    })

  // Sidebar Search
  section.section.novi-background.section-66.section-top-124
    .container
      h2 Subscribe Form Widget
      hr.divider.divider-md.bg-mantis
  
      .row.justify-content-md-center.offset-top-66
        .col-md-6.col-xl-5
          +widget-form-subscribe("Type your E-Mail", "form-output-global", true)

  // Flickr Photostream
  section.section.novi-background.section-66
    .container
      h2 Flickr Photo Stream Widget
      hr.divider.divider-md.bg-mantis
  
      .row.justify-content-md-center.offset-top-66
        .col-md-4.col-xl-3
            +widget-flickrfeed("tm58888_landscapes", {"data-image_q": "src"}, 9)

  // Twitter feed Widget
  section.section.novi-background.section-66.section-bottom-124
    .container
      h2 Twitter feed Widget
      hr.divider.divider-md.bg-mantis
  
      .row.justify-content-md-center.text-left.offset-top-66
        .col-md-4.col-xl-3
          +widget-twitter({ "dataTwitterUsername": "templatemonster" })

  // Page Footers
  include ../sections/_section-footer-default
